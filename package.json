{
    "name": "kra-data-extractor",
    "version": "1.0.0",
    "description": "KRA VAT Returns and General Ledger Data Extractor",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "nodemon --watch . --exec electron . --dev",
        "watch": "nodemon --watch . --exec electron .",
        "build": "electron-builder --win --x64",
        "dist": "electron-builder --publish=never"
    },
    "keywords": [
        "kra",
        "vat",
        "ledger",
        "extraction",
        "kenya"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.3.11",
        "electron-builder": "^24.13.3",
        "nodemon": "^3.1.10"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.80.0",
        "exceljs": "^4.4.0",
        "node-fetch": "^2.6.1",
        "playwright": "^1.55.0",
        "tesseract.js": "^5.1.1"
    },
    "build": {
        "appId": "com.postportum.kra-extractor",
        "productName": "KRA POST PORTUM TOOL",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "main.js",
            "renderer-new.js",
            "index-new.html",
            "styles-new.css",
            "toast-styles.css",
            "automation-table-styles.css",
            "config.json",
            "tesseract-config.js",
            "automations/**/*",
            "node_modules/**/*",
            "!node_modules/.cache",
            "!node_modules/.bin"
        ],
        "extraResources": [
            {
                "from": "assets",
                "to": "assets",
                "filter": ["**/*"]
            },
            {
                "from": "node_modules/tesseract.js/dist",
                "to": "tesseract-dist"
            },
            {
                "from": "node_modules/tesseract.js-core",
                "to": "tesseract-core"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                },
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ],
            "icon": "assets/icons/icon-512x512.png",
            "publisherName": "POST PORTUM",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "KRA POST PORTUM TOOL"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns",
            "category": "public.app-category.business"
        },
        "linux": {
            "target": ["AppImage", "deb"],
            "icon": "assets/icon.png",
            "category": "Office"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/imodoiepale/kra-audit-extractor.git"
    },
    "bugs": {
        "url": "https://github.com/imodoiepale/kra-audit-extractor/issues"
    },
    "homepage": "https://github.com/imodoiepale/kra-audit-extractor#readme"
}
